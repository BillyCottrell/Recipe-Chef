<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardElevation="2dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:id="@+id/recipeImagebtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_launcher_background"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitXY"
                android:clickable="false"
                android:focusable="false"/>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/imageInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#99000000"
                app:layout_constraintBottom_toBottomOf="@id/recipeImagebtn">
            <TextView
                    android:id="@+id/txtNaam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toTopOf="@id/imageInfoContainer"
                    app:layout_constraintEnd_toStartOf="@id/bookmark"
                    app:layout_constraintStart_toStartOf="@id/imageInfoContainer"/>
            <Button
                    android:id="@+id/bookmark"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_bookmark_border_white_24dp"
                    app:layout_constraintTop_toTopOf="@id/imageInfoContainer"
                    app:layout_constraintRight_toLeftOf="@id/like"/>
            <Button
                    android:id="@+id/like"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_thumb_up_alt_white_24dp"
                    app:layout_constraintTop_toTopOf="@id/imageInfoContainer"
                    app:layout_constraintRight_toLeftOf="@id/share"/>
            <Button
                    android:id="@+id/share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_share_white_24dp"
                    app:layout_constraintTop_toTopOf="@id/imageInfoContainer"
                    app:layout_constraintRight_toRightOf="@id/imageInfoContainer"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>