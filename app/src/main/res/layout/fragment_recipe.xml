<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.RecipeFragment">
    <android.support.constraint.ConstraintLayout
            android:id="@+id/recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_launcher_background"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="@id/recipe"
                app:layout_constraintEnd_toEndOf="@id/recipe"
                app:layout_constraintTop_toTopOf="@id/recipe"/>
        <TextView
                android:id="@+id/txtNaam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_bold"
                android:textColor="@android:color/black"
                android:textSize="21sp"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/recipeImage"
                app:layout_constraintEnd_toStartOf="@id/preparationTime"
                app:layout_constraintStart_toStartOf="@id/recipe"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/preparationTime"
                app:layout_constraintTop_toBottomOf="@id/recipeImage"
                app:layout_constraintEnd_toEndOf="@id/recipe"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/lblPreparationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_semi_bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="13dp"
                    android:text="Bereidingstijd:"/>
            <TextView
                    android:id="@+id/txtPreparationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"/>
        </LinearLayout>
        <TextView
                android:id="@+id/lblBeschrijving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:paddingStart="10dp"
                android:text="Beschrijving:"
                app:layout_constraintTop_toBottomOf="@id/txtNaam"/>
        <TextView
                android:id="@+id/txtBeschrijving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_regular"
                android:textSize="17sp"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/lblBeschrijving"/>
        <ImageView
                android:id="@+id/recipeIngredients"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_launcher_background"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="@id/recipe"
                app:layout_constraintEnd_toEndOf="@id/recipe"
                app:layout_constraintTop_toTopOf="@id/recipe"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>